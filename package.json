{
  "name": "youtube-hide-watched-video-extension",
  "version": "2.7.1",
  "description": "Browser extension to hide watched videos on YouTube",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "build:content": "webpack --config webpack.content.config.js",
    "build:content:watch": "webpack --config webpack.content.config.js --watch",
    "build:content:prod": "webpack --config webpack.content.config.js --mode production",
    "build": "npm run build:content:prod",
    "dev": "npm run build:content:watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@testing-library/jest-dom": "^6.1.5",
    "babel-jest": "^30.1.2",
    "fake-indexeddb": "^4.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "*.js",
      "content/**/*.js",
      "!tests/**",
      "!scripts/**",
      "!dist/**",
      "!content.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 15,
        "functions": 15,
        "lines": 15,
        "statements": 15
      }
    }
  }
}
